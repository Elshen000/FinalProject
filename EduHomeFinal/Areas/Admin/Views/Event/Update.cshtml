@model Event
<form method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="exampleInputEmail1">Şəkil</label>
        <input asp-for="@Model.Photo" class="form-control" aria-descriedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.Photo"></span>
    </div>
    <div class="form-group">
        <label>Ad</label>
        <input asp-for="@Model.EventName" class="form-control" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.EventName"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Təsviri</label>
        <input asp-for="@Model.EventDetail.Description" class="form-control" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.EventDetail.Description"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Altyazı</label>
        <input asp-for="@Model.EventDetail.Title" class="form-control" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.EventDetail.Title"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Kiçik Altyazı</label>
        <input asp-for="@Model.EventDetail.SubTitle" class="form-control" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.EventDetail.SubTitle"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Kiçik Altyazı2</label>
        <input asp-for="@Model.EventDetail.SubTitle2" class="form-control" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.EventDetail.SubTitle2"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Yaranma vaxtı</label>
        <input asp-for="@Model.EventDetail.DateTime" class="form-control" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.EventDetail.DateTime"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Başlama vaxtı</label>
        <input asp-for="@Model.EventDetail.StartTime" class="form-control" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.EventDetail.StartTime"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Bitmə vaxtı</label>
        <input asp-for="@Model.EventDetail.EndTime" class="form-control" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.EventDetail.EndTime"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Ünvan</label>
        <input asp-for="@Model.EventDetail.EventPlace" class="form-control" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.EventDetail.EventPlace"></span>
    </div>
    <div  class="form-group">
        <label for="exampleInputEmail1">Spikerlər</label>
        <div class="form-check form-switch" style="margin-left:30px;">
            @foreach (Speaker item in ViewBag.Speakers)
            {
                if (Model.EventSpeaker.Any(x => x.SpeakerId == item.Id))
                {
                    <input checked class="form-check-input" type="checkbox" value="@item.Id" name="SpeakerId[]" />
                    <label class="form-check-label">@item.SpeakerName</label>
                }
                else
                {
                    <input class="form-check-input" type="checkbox" value="@item.Id" name="SpeakerId[]" />
                    <label class="form-check-label">@item.SpeakerName</label>
                }

            }
        </div>
    </div>
  



    <button type="submit" class="btn btn-primary" style="margin:20px;">Yenilə</button>
</form>

