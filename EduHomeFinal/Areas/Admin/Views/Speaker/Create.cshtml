@model Speaker
<form method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="exampleInputEmail1">Şəkil</label>
        <input asp-for="@Model.Photo" class="form-control" aria-descriedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.Photo"></span>
    </div>
    <div class="form-group">
        <label>Ad</label>
        <input asp-for="@Model.SpeakerName" class="form-control" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.SpeakerName"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Təsvir</label>
        <input asp-for="@Model.SpeakerPlace" class="form-control" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.SpeakerPlace"></span>
    </div>

    <button type="submit" class="btn btn-primary" style="margin:20px;">Yarat</button>
</form>