@model AboutVM
@{
    ViewData["Title"] = "Index";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>HAQQIMIZDA</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- About Start -->
@await Component.InvokeAsync("About")
<!-- About End -->
<!-- Teacher Start -->
<div class="row">
    <div class="col-xs-12">
        <div class="section-title text-center">
            <img style="width:250px;" src="~/img/about/@Model.About.Icon" alt="title">
            <h2>MÜƏLLİMLƏRİMİZLƏ TANIŞ OLMAQ İSTƏRMİSİNİZ?</h2>
        </div>
    </div>
</div>
<div class="row" id="ourTeachers">
    @foreach (Teacher teacher in Model.Teachers)
    {
        <div class="col-md-3 col-sm-4 col-xs-12">
            <div class="single-teacher mb-45" style="margin-right:30px;margin-left:30px;">
                <div class="single-teacher-img">
                    <a @*asp-route-id="@teacher.Id" asp-controller="Teacher" asp-action="Detail"*@><img src="~/img/teacher/@teacher.Image" alt="teacher"></a>
                </div>
                <div class="single-teacher-content text-center">
                    <h2><a @*asp-controller="Teacher" asp-action="Detail" asp-route-id="@teacher.Id"*@>@teacher.Name</a></h2>
                    <h4>@teacher.TeacherPosition.Position</h4>
                    <ul>

                        <li><a href="@teacher.TeacherSocialMedia.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                        <li><a href="@teacher.TeacherSocialMedia.Pinterest"><i class="zmdi zmdi-pinterest"></i></a></li>
                        <li><a href="@teacher.TeacherSocialMedia.Vimeo"><i class="zmdi zmdi-vimeo"></i></a></li>
                        <li><a href="@teacher.TeacherSocialMedia.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>

                    </ul>
                </div>
            </div>
        </div>

    }
</div>
<!-- Notice Start -->
<section class="notice-area two three pt-140 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right-wrapper mb-25 pb-25">
                    <h3>VIDEO</h3>
                    <div class="notice-video">
                        @await Component.InvokeAsync("Video")
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">
                    <h3>ELAN LÖVHƏSİ</h3>
                    <div class="notice-left">
                        @await Component.InvokeAsync("NoticeBoard")
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
