@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>DAXİL OLMAQ</h2>
                            <span>ZƏHMƏT OLMASA MƏLUMATLARINIZI QEYD EDİN.</span>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="login-form">
                            <form method="post">

                                <label for="exampleInputEmail1"> İstifadəçi Adı</label>
                                <input asp-for="@Model.Username" class="form-control form-control-lg border-left-0">
                                <span class="text-danger" asp-validation-for="@Model.Username"></span>

                                <label for="exampleInputEmail1">Parol</label>
                                <input asp-for="@Model.Password" class="form-control form-control-lg border-left-0">
                                <span class="text-danger" asp-validation-for="@Model.Password"></span>

                                <div class="button-box">
                                    <div class="login-toggle-btn">

                                        <a asp-controller="Account" asp-action="ForgotPassword">PAROLU UNUTMUSAN?</a>
                                    </div>

                                    <button type="submit" class="default-btn">DAXİL OL</button>
                                    
                                </div>
                               
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->
