@model List<Course>
@{
    ViewData["Title"] = "Index";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Kurslarımız</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>Kurs Axtarın</h3>
                </div>
                <div class="course-form">
                    <form id="search" action="#">
                        <input id="coursesearch" type="search" placeholder="Axtarış..."  />
                        
                    </form>
                </div>
            </div>
        </div>
        <div class="row" id="searchcourse">
            @foreach (Course course in Model)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-course mb-70">
                        <div class="course-img">
                            <a asp-controller="Course" asp-action="Detail" asp-route-id="@course.Id">
                                <img style="height:200px;width:100%;" src="~/img/course/@course.Image" alt="course">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                        </div>
                        <div class="course-content">
                            <h3><a asp-controller="Course" asp-action="Detail" asp-route-id="@course.Id">@course.CourseName</a></h3>
                           
                            <a class="default-btn" asp-controller="Course" asp-action="Detail" asp-route-id="@course.Id">Daha Çox</a>
                        </div>
                    </div>
                </div>
            }


        </div>
      
    </div>
</div>
<!-- Course End -->
