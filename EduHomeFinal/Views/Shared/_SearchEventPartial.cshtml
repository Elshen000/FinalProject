@model List<Event>
@foreach (Event even in Model)
{
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-event mb-60">
            <div class="event-img">
                <a asp-controller="Event" asp-action="Detail" asp-route-id="@even.Id">
                    <img src="~/img/event/@even.Image" alt="event">
                    <div class="course-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </a>
                <div class="event-date">
                    <h3> <span>@even.EventDetail.DateTime.ToString("dd/MM/yy")</span></h3>
                </div>
            </div>
            <div class="event-content text-left">
                <h4><a asp-controller="Event" asp-action="Detail" asp-route-id="@even.Id">@even.EventName</a></h4>
                <ul>
                    <li><span>time:</span> @even.EventDetail.StartTime.ToString("HH-mm") - @even.EventDetail.EndTime.ToString("HH-mm")</li>
                    <li><span>venue:</span>@even.EventDetail.EventPlace </li>
                </ul>
                <div class="event-content-right">
                    <a class="default-btn" asp-controller="Event" asp-action="Detail" asp-route-id="@even.Id">join now</a>
                </div>
            </div>
        </div>
    </div>
}
