@model GlobalSearchVM
<div id="searchresult" style="background-color:white;">
    @foreach (Course item in Model.Courses)
    {

        <li style="text-align: left; list-style-type: none;"><a asp-controller="Course" asp-action="Detail" asp-route-id="@item.Id">@item.CourseName</a></li>
    }
    @foreach (Blog item in Model.Blogs)
    {

        <li style="text-align: left; list-style-type: none;"><a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">@item.BlogDetail.BlogDesciription</a></li>
    }

    @foreach (Teacher item in Model.Teachers)
    {

        <li style="text-align: left; list-style-type: none;"><a asp-controller="Teacher" asp-action="Index" asp-route-id="@item.Id">@item.Name</a></li>
    }

    @foreach (Event item in Model.Events)
    {

        <li style="text-align: left; list-style-type: none;"><a asp-controller="Event" asp-action="Detail" asp-route-id="@item.Id">@item.EventName</a></li>
    }
</div>


